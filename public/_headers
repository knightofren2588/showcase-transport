# Security Headers for Showcase Transport LLC

# Ultra-permissive for JotForm compatibility



/*

  # Content Security Policy - Very permissive for JotForm

  Content-Security-Policy: default-src 'self' https: data: blob:; script-src 'self' 'unsafe-inline' 'unsafe-eval' https: http:; style-src 'self' 'unsafe-inline' https: http:; img-src 'self' data: https: http: blob:; font-src 'self' data: https: http:; connect-src 'self' https: http:; frame-src 'self' https: http:; frame-ancestors 'none'; base-uri 'self'; form-action 'self' https: http:

  

  # Strict Transport Security

  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload

  

  # Prevent clickjacking

  X-Frame-Options: DENY

  

  # Prevent MIME sniffing

  X-Content-Type-Options: nosniff

  

  # XSS Protection

  X-XSS-Protection: 1; mode=block

  

  # Referrer Policy

  Referrer-Policy: strict-origin-when-cross-origin

  

  # Permissions Policy - Allow everything for JotForm

  Permissions-Policy: camera=*, microphone=*, geolocation=*, payment=*

  

  # Cache Control

  Cache-Control: public, max-age=0, must-revalidate



/assets/*

  Cache-Control: public, max-age=31536000, immutable

  

/icons/*

  Cache-Control: public, max-age=31536000, immutable



/sw.js

  Cache-Control: no-cache, no-store, must-revalidate



/manifest.json

  Cache-Control: public, max-age=3600
